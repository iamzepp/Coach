<Window x:Class="CoachWriter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoachWriter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Name="grid" HeadersVisibility="All" LoadingRow="grid_LoadingRow" RowHeaderWidth="45">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Удалить" Click="btn_vid_Click" ></MenuItem>
                    <MenuItem Header="Вставить" Click="btn_vstv_Click"></MenuItem>
                    <Separator/>
                    <MenuItem Header="Переместить в ячейку">
                        <TextBox Name="t_v" Text="1" Width="80" TextAlignment="Center" KeyDown="t_v_KeyDown" />
                    </MenuItem>
                    <MenuItem Header="Сохранить файл" Click="btn_Click"></MenuItem>
                    <Separator/>
                    <MenuItem Header="Заменить Place из файла" Click="MenuItem_Click"></MenuItem>
                    <MenuItem Header="Создать новую коллекцию" Click="MenuItem1_Click"></MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</Window>
